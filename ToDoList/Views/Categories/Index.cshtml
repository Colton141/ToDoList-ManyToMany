<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>To Do List</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
    <h1>To Do List</h1>
    </div>
    <h5>Here are the current categories:</h5><br>
    @if (Model.Count != 0)
    {
      @foreach (var category in Model)
      {
        <a href="/categories/@category.GetId()" class="btn btn-dark">@category.GetName()</a><br>
      }
    }
  <div id="space">
  </div>
  <hr>
  <a href="/categories/new" class="btn btn-dark">Add a new category</a>
  <a href="/" class="btn btn-dark">Home</a>
  </div>
</body>
</html>
