<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>To Do List</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>To Do List</h1>
    </div>
    <h5>Current to do items in the @Model["category"].GetName() category:</h5><br>
    @if(Model.Count != 0)
    {
      @foreach (var item in @Model["categoryItems"])
      {
        <a href="/categories/@Model["categoryItems"]" class="btn btn-dark">@item.GetDescription()</a><br>
      }
    }
    <br>
    <h5>Add an item to this category:</h5><br>
    <form action='/categories/@Model["category"].GetId()/items/new' method='post'>
      <label for='itemId'>Select an item:</label><br>
      <select id='itemId' name='itemId' type='text'><br>
        @foreach (var item in @Model["allItems"])
        {
          <option value='@item.GetId()'>@item.GetDescription()</option><br>
        }
      </select><br>
      <br>
      <button type='submit' class="btn btn-dark">Add</button>
    </form>
    <div id="space">
    </div>
    <hr>
    <a href="/categories" class="btn btn-dark">Return to category list</a>
    <a href="/" class="btn btn-dark">Return to homepage</a>
  </div>
</body>
</html>
